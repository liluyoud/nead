<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="NEAD Admin Center - Nead AC">
    <meta name="author" content="Liluyoud Cury de Lacerda">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.png">
    <title>@ViewData["Title"] - Nead AC</title>

    <environment include="Development">
        <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/assets/plugins/prism/prism.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/css/colors/blue.css" id="theme" rel="stylesheet">
    </environment>

    <environment exclude="Development">
        <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/assets/plugins/prism/prism.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/css/colors/blue.css" id="theme" rel="stylesheet">
    </environment>
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="fix-header fix-sidebar card-no-border">
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>

    <div id="main-wrapper">
        @await Html.PartialAsync("_Cabecalho")

        @await Html.PartialAsync("_BarraLateral")

        <div class="page-wrapper">
            @RenderBody()

            <footer class="footer"> © @DateTime.Now.Year NEAD Admin Center</footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/assets/plugins/jquery/jquery.min.js"></script>
        <script src="~/assets/plugins/popper/popper.min.js"></script>
        <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/waves.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
        <script src="~/js/custom.min.js"></script>
        <script src="../assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/plugins/jquery/jquery.min.js"></script>
        <script src="~/assets/plugins/popper/popper.min.js"></script>
        <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/waves.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
        <script src="~/js/custom.min.js"></script>
        <script src="../assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
