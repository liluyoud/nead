@page
@model LoginModel

@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Log in";
}

<section id="wrapper" class="login-register login-sidebar" style="background-image:url(../assets/images/background/login-register.jpg);">
    <div class="login-box card">
        <a href="javascript:void(0)" class="text-center db">
            <img src="~/assets/images/Logo-UniSL-Large.png" alt="Home" class="img-responsive" /><br />
        </a>

        <div class="card-body">
            <form method="post" id="loginform" class="form-horizontal form-material">
                <div class="form-group m-t-40">
                    <input asp-for="Input.Cpf" class="form-control" required placeholder="CPF" />
                </div>
                <div class="form-group">
                    <input asp-for="Input.Senha" class="form-control" required minlength="6" placeholder="Senha" />
                </div>
                <div class="form-group">
                    <div class="checkbox checkbox-primary pull-left p-t-0">
                        <input asp-for="Input.Lembrar" id="checkbox-signup" type="checkbox" />
                        <label for="checkbox-signup"> Lembrar Login </label>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                </div>
                <div class="form-group m-b-0">
                    <p class="text-center">Não tem uma conta? <br /><a asp-page="./register" class="text-primary m-l-5"><b>Cadastre-se</b></a></p>
                </div>
                <hr />
                <div class="form-group m-b-0">
                    <p class="text-center"><a href="javascript:void(0)" id="to-recover" class="text-primary"><i class="fa fa-lock m-r-5"></i> Esqueceu sua senha?</a></p>
                </div>
            </form>

            <form class="form-horizontal" id="recoverform" action="index.html">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Recuperar senha</h3>
                        <p class="text-muted">Informe seu email que instruções para a criação de nova senha será enviado para você.</p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Criar nova senha</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/assets/plugins/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
    <script>
        $('#Input_Cpf').mask('000.000.000-00', { clearIfNotMatch: true });
    </script>
}

